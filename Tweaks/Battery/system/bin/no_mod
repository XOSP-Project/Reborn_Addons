PATH=$PATH:/system/xbin:/sbin:/vendor/bin:/system/sbin:/system/bin
if [ -d "/data/local/busybox*/xbin" ]; then PATH=$PATH:`ls -d /data/local/busybox*/xbin 2>/dev/null`; fi
   
mount -o remount,rw /system 2>/dev/null;
busybox mount -o remount,rw /system 2>/dev/null; 

busybox clear
busybox echo ""
busybox echo -e "\e[01;33m     Spark...\e[00;37m"
busybox echo -e "\e[31m   //----------------------------------------//"
busybox echo -n "  "
busybox echo -e "\e[00;41m//       UNINSTALLER                     //\e[00;37;40m"
busybox echo -e "\e[31m //----------------------------------------//\e[00;37;40m"
busybox echo -e "\e[01;33m                        Imagination At Work  
\e[00;37;40m"
busybox sleep 3
busybox echo -n ">>>...Really Uninstall...?
[ Yes = 1 | No = 2 ]: "
read option
if [ $option -ne 1 ]; then
busybox echo ""
busybox echo ">>>...Exiting Now..."
busybox sleep 1
busybox exit
else
busybox sleep 1
fi;
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Mounting Partition..."
busybox sleep 1;
busybox mount -o rw,remount /data
busybox mount -o rw,remount /system
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Sequential StartUp Of The Uninstall Process..."

busybox sleep 3

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Init.D..."
busybox rm -rf /system/etc/init.d;   

if [ -e /system/etc/init.d.bak ]; then
busybox	mv /system/etc/init.d.bak /system/etc/init.d;
busybox	chmod 755 /system/etc/init.d;
busybox	chmod 755 /system/etc/init.d/*;
busybox	chown 0.0 /system/etc/init.d;
busybox	chown 0.0 /system/etc/init.d/*;
fi;

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Nitro X Entropy..."
if [ -e /system/bin/qrngd.bak ]; then
busybox mv -f /system/bin/qrngd.bak /system/bin/qrngd
busybox chmod -f 755 /system/bin/qrngd
busybox chown -f 0.0 /system/bin/qrngd
fi;
if [ -e /system/xbin/qrngd.bak ]; then
busybox mv -f /system/xbin/qrngd.bak /system/xbin/qrngd
busybox chmod -f 755 /system/xbin/qrngd
busybox chown -f 0.0 /system/xbin/qrngd
fi;
if [ -e /system/bin/haveged.bak ]; then
busybox mv -f /system/bin/haveged.bak /system/bin/haveged
busybox chmod -f 755 /system/bin/haveged
busybox chown -f 0.0 /system/bin/haveged
fi;
if [ -e /system/xbin/haveged.bak ]; then
busybox mv -f /system/xbin/haveged.bak /system/xbin/haveged
busybox chmod -f 755 /system/xbin/haveged
busybox chown -f 0.0 /system/xbin/haveged
fi;
if [ -e /system/xbin/haveged ]; then
busybox rm -f /data/rngd.pid
busybox pkill /system/xbin/haveged
busybox pkill /system/xbin/entro
busybox rm -f /dev/haveged.pid
busybox rm -f /system/xbin/haveged
busybox rm -f /system/xbin/entro
fi
if [ -e /system/bin/nitro_on ]; then
busybox rm -f /system/bin/nitro_on
fi
if [ -e /system/bin/nitro_off ]; then
busybox rm -f /system/bin/nitro_off
fi;
if [ -d /system/etc/Nitro_Scritpts ]; then
busybox rm -R /system/etc/Nitro_Scritpts
fi;

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Ads_Nitro..."

busybox pkill /system/bin/dnsproxy2dex
busybox pkill /system/bin/dnsmasqdex
busybox pkill /system/bin/pixelservdex
busybox pkill data/dnsmasq.pid
busybox rm -f /system/bin/dnsproxy2dex
busybox rm -f /system/bin/dnsmasqdex
busybox rm -f /system/bin/pixelservdex
busybox rm -f /data/dnsmasq.pid

if [ -e /system/etc/Ads_Nitro/hosts.bak ]; then
busybox rm -f /system/etc/hosts
busybox mv -f /system/etc/Ads_Nitro/hosts.bak /system/etc/hosts
busybox chmod -f 755 /system/etc/hosts
busybox chown -f 0.0 /system/etc/hosts
else
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...No backup present for Hosts..."
fi;

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...System Mod Files..."
busybox sleep 5

busybox rm -f /system/bin/dns_on
busybox rm -f /system/bin/dns_off
busybox rm -f /system/bin/EngineSqlite
busybox rm -f /system/bin/menu
busybox rm -f /system/bin/scan
busybox rm -f /system/xbin/zipalign
busybox rm -f /system/xbin/boost
busybox rm -f /system/zipalign.db 
busybox pkill /system/etc/dnsmasq.conf
busybox rm -f /system/etc/dnsmasq.conf
busybox pkill /data/local/dnsmasq-host
busybox rm -f /data/local/dnsmasq-host
busybox rm -f /system/xbin/rinetd
busybox rm -f /system/etc/rinetd.conf
busybox rm -f /system/bin/dnsmasq
busybox rm -f /system/etc/resolv.conf
busybox rm -rf /data/ModBoost
busybox rm -rf /data/Database
busybox rm -rf /system/etc/Ads_Nitro

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...Wipe Resource / Caches..."
busybox sleep 2
if [ -d /data/dalvik-cache ]; then
busybox rm -f /data/dalvik-cache/*
fi;
if [ -d /data/resource-cache ]; then
busybox rm -f /data/resource-cache/*
fi;

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...The Engine Nitro X Has Been Removed..."
busybox echo ""
busybox echo ">>>...Everything Is Restored..."
busybox sleep 2
busybox echo ""
busybox echo ">>>...Your Device Will Reboot..."
busybox sleep 5

busybox rm /data/*.log
busybox rm /system/bin/no_mod

reboot
busybox reboot

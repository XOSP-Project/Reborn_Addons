PATH=$PATH:/system/xbin:/sbin:/vendor/bin:/system/sbin:/system/bin
if [ -d "/data/local/busybox*/xbin" ]; then PATH=$PATH:`ls -d /data/local/busybox*/xbin 2>/dev/null`; fi

PMB=/data/ModBoost/X00ENLARGER.log;

if [ -e $PMB ]; then
busybox	rm $PMB;
fi;

busybox touch $PMB;
busybox echo "# NITRO X_SPARK EDITION" | tee -a $PMB;
busybox echo "" | tee -a $PMB;
busybox echo "# STARTING UP OF NITRO X : $( date +"%m-%d-%Y %H:%M:%S" )" | tee -a $PMB;
busybox echo "" | tee -a $PMB;

busybox sysctl -w kernel.random.write_wakeup_threshold=128;
busybox sysctl -w kernel.random.read_wakeup_threshold=1376;

busybox sleep 1

if [ /proc/sys/kernel/random/read_wakeup_threshold=1366 ]; then
busybox echo "...Optimization Nitro X Level : Enlarger = Activated..." | tee -a $PMB; else
busybox echo "...Optimization Nitro X Level : Enlarger = Not Activated..." | tee -a $PMB;
fi;

busybox echo "" | tee -a $PMB;
busybox echo "# END OF THE NITRO X : $( date +"%m-%d-%Y %H:%M:%S" ) " | tee -a $PMB

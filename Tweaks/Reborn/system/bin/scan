busybox clear
busybox echo
busybox echo -e "\e[01;32m     SPARK...\e[00;37m"
busybox echo -e "\e[31m   //----------------------------------------//"
busybox echo -n "  "
busybox echo -e "\e[00;41m//       CHECKING MOD                    //\e[00;37;40m"
busybox echo -e "\e[31m //----------------------------------------//\e[00;37;40m"
busybox echo -e "\e[01;32m                        FEEL THE POWER
\e[00;37;40m"
busybox sleep 1
busybox echo ""
busybox echo ">>>...Sequential StartUp Of The Checking Process...<<<"
busybox sleep 3
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...NITRO DIRECTORY...<<<"

busybox echo ">>>...Checking for X00NITRO..."
busybox sleep 1
if [ -e /system/etc/Nitro/X00NITRO ]; then
busybox echo "...X00NITRO = OK..."
busybox sleep 1
else
busybox echo "...NOT OK = ERROR..."
busybox sleep 1
fi;
   
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...BIN / XBIN...<<<"

busybox echo ">>>...Checking for BUSYBOX..."
busybox sleep 1
if [ -e /system/xbin/busybox ]; then
busybox echo "...BUSYBOX = OK..."
busybox sleep 1
else
busybox echo "...NOT OK = ERROR..."
busybox sleep 1
fi;
   
busybox echo ">>>...Checking for BOOST..."
busybox sleep 1
if [ -e /system/xbin/boost ]; then
busybox echo "...BOOST = OK..."
busybox sleep 1
else
busybox echo "...NOT OK = ERROR..."
busybox sleep 1
fi;
   
busybox echo ">>>...Checking for MASTER..."
busybox sleep 1
if [ -e /system/bin/mode ]; then
busybox echo "...MASTER = OK..."
busybox sleep 1
else
busybox echo "...NOT OK = ERROR..."
busybox sleep 1
fi;

busybox echo ">>>...Checking for NITRO_ENTROPY..."
busybox sleep 1
if [ -e /system/bin/nitro ]; then
busybox echo "...NITRO_ENTROPY = OK..."
busybox sleep 1
else
busybox echo "...NOT OK = ERROR..."
busybox sleep 1
fi;

busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...If Error, Please Flash The Mod Again...<<<"
busybox echo ">>>...If The Problem Persists , Contact Dev On Thread...<<<"   
busybox echo ">>>...Otherwise , Well Done...<<<"   
busybox echo ""
busybox echo ">>>-----------------------<<<"
busybox echo ""
busybox echo ">>>...CHECKING ENGINE NITRO X : COMPLETED...<<<"
busybox sleep 5
exit 0